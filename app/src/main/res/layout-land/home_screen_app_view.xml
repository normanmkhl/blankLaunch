<?xml version="1.0" encoding="utf-8"?> 

<com.test.norman.launcher.views.blankLinearLayoutButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bt_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/style_for_buttons"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="2dp"
    android:paddingStart="20dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="10dp"
        android:textColor="?blank_text_on_button"
        android:textSize="@dimen/medium" />

</com.test.norman.launcher.views.blankLinearLayoutButton>