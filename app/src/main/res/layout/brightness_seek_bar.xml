<?xml version="1.0" encoding="utf-8"?> 

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <SeekBar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/brightness_seek_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:indeterminate="false"
        android:max="255"
        android:progress="0"
        android:progressBackgroundTint="?blank_decoration_on_background"
        android:progressTint="?blank_selected_on_background"
        android:thumbTint="?blank_decoration_on_background" />

    <CheckBox
        android:id="@+id/auto_brightness_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="?blank_decoration_on_background"
        android:text="@string/auto_brightness"
        android:textColor="?blank_text_on_background" />
</LinearLayout>

